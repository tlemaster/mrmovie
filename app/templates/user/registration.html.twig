{# templates/user/registration.html.twig #}
{% extends 'base.html.twig' %}

{% block title %} Mr Movie - Sign Up {% endblock title %}

{% block body %}
    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
        <div class="col-6 mx-auto p-4 p-md-5 border rounded-3 bg-light">
            {{ form_start(form) }}
            
            {{ form_errors(form)}}

            {{ form_row(form.email)}}

            {{ form_row(form.displayName) }}

            {{ form_row(form.password.first, {'label': 'Password'}) }}

            {{ form_row(form.password.second, {'label': 'Confirm Password'}) }}

            {{ form_row(form.submit, {'label': 'Sign Up'}) }}

            <hr class="my-4">
            <span class= "text-muted">I've changed my mind let's head <a href="{{ path('default') }}">back<a/></span>

            {{ form_end(form)}}
        </div>
    </div>
{% endblock body %}
