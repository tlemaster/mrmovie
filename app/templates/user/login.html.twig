{# templates/user/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %} Mr Movie - Login {% endblock title %}

{% block body %}
    <form class="p-4 p-md-5 border rounded-3 bg-light" action="{{ path('user_login') }}" method="post">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="username floatingInput"
                 name="_username" value="{{ last_username }}" placeholder="name@example.com"/>
            <label for="username floatingInput">Email</label>
        </div>

        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="password floatingPassword" 
                name="_password" placeholder="Password"/>
            <label for="password floatingPassword">Password:</label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="{{ path('movie_list') }}"> 

        <button type="submit" class="w-100 btn btn-lg btn-primary">login</button>
        <hr class="my-4">
        <small class="text-muted">Click here to try a demo account</small>
    </form>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
{% endblock body %}
