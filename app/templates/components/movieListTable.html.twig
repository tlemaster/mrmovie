
<div class="p-3 border rounded-3 bg-light shadow">
    {% if movieLists %}
        <table class="table table-hover">
            <thead>
                <th scope="col">Title</th>
                <th scope="col"></th>
            </thead>
            <tbody>
            {% for list in movieLists %}
                {% set deleteLink = url('movie_list_delete', {'id': list.movie.id}) %}
                {% set imdbLink = imdbMovieUrl.value ~ list.movie.ImdbId %}
                <tr scope="row">
                    <td>{{ list.movie.title }}</td> 
                    <td class="text-end">
                        <div class="dropdown">
                            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">Actions</button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" href="{{ imdbLink }}" target="_blank">Learn More</a></li>
                                <li><a class="dropdown-item" href="{{ deleteLink }}">Delete</a></li>    
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
       <div id="empty-table">
            <span class="text muted">You're fresh out of movies, add one so we can keep track it for you.</span>
        </div>
    {% endif %} 
</div>